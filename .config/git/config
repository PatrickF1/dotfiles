[user]
  email = patrickf3139@gmail.com
  name = Patrick Fong
[push]
  default = current
  autoSetupRemote = true
[pull]
  ff = only
  rebase = true
[core]
  pager = delta
  editor = nvim
  excludesfile = ~/.config/git/global_ignore
[interactive]
  # https://git-scm.com/docs/git-config#Documentation/git-config.txt-interactivediffFilter
  diffFilter = delta --color-only
[pager]
  branch = false
[alias]
  aliases = config --get-regexp ^alias\\.
  amend = commit --all --amend --no-edit
  br = branch
  cm = commit
  co = checkout
  d = diff
  dc = diff --cached
  fp = push --force
  lg = log --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(cyan)%aD%C(reset) %C(green)(%ar)%C(reset)%C(yellow)%d%C(reset)%n          %C(normal)%s%C(reset)   %C(dim normal)[%an]%C(reset)'
  pl = pull
  ps = push
  rh = reset --hard
  rb = rebase
  rpath = rev-parse --show-prefix # get path relative to root
  rst = restore
  st = status --short
  undo = reset HEAD^
[diff]
  algorithm = patience
  # cannot be dimmed-zebra or delta will be unable to distinguish between old and new moved
  colorMoved = zebra
[merge]
  conflictstyle = diff3
[fetch]
  prune = true
[init]
  defaultBranch = main
[help]
  autocorrect = 8
[advice]
  detachedHead = false
[delta]
  navigate = true
  light = false      # set to true to use colors appropriate for a light terminal background
  paging = always
  hyperlinks = true
  hyperlinks-file-link-format = vscode://file/{path}:{line}
  # give zebra-painted (moved) lines syntax highlighting and a new background
  # bold purple = line before move, bold cyan = line after move
  map-styles = bold purple => syntax DimGray, bold cyan => syntax DarkCyan
