[user]
  email = patrickf3139@gmail.com
  name = Patrick Fong
[push]
  default = current
  autoSetupRemote = true
[pull]
  ff = only
  rebase = true
[core]
  editor = nvim
  excludesfile = ~/.config/git/global_ignore
[pager]
  branch = false
[alias]
  aliases = config --get-regexp ^alias\\.
  amend = commit --all --amend --no-edit
  br = branch
  cm = commit
  co = checkout
  d = diff
  dc = diff --cached
  fp = push --force
  lg = log --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(cyan)%aD%C(reset) %C(green)(%ar)%C(reset)%C(yellow)%d%C(reset)%n          %C(normal)%s%C(reset)   %C(dim normal)[%an]%C(reset)'
  pl = pull
  ps = push
  rh = reset --hard
  rb = rebase
  rpath = rev-parse --show-prefix # get path relative to root
  st = status --short
  undo = reset HEAD^
[diff]
  algorithm = patience
  colorMoved = dimmed-zebra
[fetch]
  prune = true
[init]
  defaultBranch = main
[help]
  autocorrect = 8
[advice]
  detachedHead = false
